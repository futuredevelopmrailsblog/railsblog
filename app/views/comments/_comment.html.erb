<div class="card-body">
  <%= gravatar_image_tag(comment.user.email.gsub('spam', 'mdeering'), alt: comment.user.name, gravatar: { size: 50 }) %>


<h4 class="card-title"><%= comment.user.name %></h4>

<br>

<%= comment.response %>

<br>

<% if (user_signed_in? && (current_user.id == comment.user_id)) %>

  <%= link_to 'Delete', [comment.pictureshot, comment],
                  method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure you want to delete this comment?' } %>



<% end %>
</div>